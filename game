//=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-
//Простой пример цикла завершения выполнения программы
// V 1.0
//=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-
#include<iostream>
using namespace std;

int main() {
	char again = 'y';
	while (again == 'y') {
		cout << "Вы отлично поиграли";
		cout << "\nВы хотите продолжить?(y\n)";
		cin >> again;
	}
	cout << "Идёт выход ... \n";
	return 0;
}
//oUTPUD
/*
Вы отлично поиграли
Вы хотите продолжить? (y/n)
Идёт выход ...
*/
