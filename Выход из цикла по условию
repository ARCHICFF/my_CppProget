#include<iostream>
using namespace std;
int main() {
	int val = 0;
	int count = 0;
	while (true) {
		++count;
		cout << val << "Введите 0 для завершения цикла " << "\n";	
		cin >> val;
		while (val == 0) {
			
		//ИЛИ
	//	if (val == 0) {
		//	exit(0);
		cout << "Количество попыток: " << count << "\n";
		exit(0);
		}
	}
//cout << "Вы ввели: " << val << "\n";
			
	return 0;
}
